<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="windowActionBar">true</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="BlackProgressBar">
        <item name="android:progressTint">#000000</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.RickAndMorty" parent="Base.Theme.RickAndMorty" />

    <style name="Theme.RickAndMorty.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.RickAndMorty</item>
    </style>
</resources>