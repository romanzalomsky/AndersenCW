<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.locations.details.DetailsLocationFragment">

    <LinearLayout
        android:id="@+id/linearLayoutDetailsLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/idNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intro_head_r_base"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Earth (C-137)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutDetailsLocationName"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutDetailsLocationName"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDetailsLocationName">

        <TextView
            android:id="@+id/idTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intro_head_r_base"
            tools:text="Planet"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/idDimensionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intro_head_r_base"
            tools:text="unknown"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/idCreatedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intro_head_r_base"
            tools:text="12.05.2023"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    </LinearLayout>
    <!--
    <TextView
        android:id="@+id/idResidentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/intro_head_r_base"
        android:text="12.05.2023"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCreatedTextView" />-->

</androidx.constraintlayout.widget.ConstraintLayout>