<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.episodes.details.DetailsEpisodeFragment">

    <LinearLayout
        android:id="@+id/linearLayoutDetailsEpisodeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/idNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intro_head_r_base"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pilot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutDetailsEpisodeName"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutDetailsEpisodeName"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDetailsEpisodeName">

        <TextView
            android:id="@+id/idAirDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intro_head_r_base"
            tools:text="December 2, 2013"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/idEpisodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intro_head_r_base"
            tools:text="S01E01"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/idCreatedEpisodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intro_head_r_base"
            tools:text="2017-11-10T12:56:33.798Z"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>